<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/felso"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/kep"
            android:layout_width="176dp"
            android:layout_height="171dp"
            android:src="@drawable/heads" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/felso"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/kozep">

        <Button
            android:layout_height="wrap_content"
            android:layout_width="206dp"
            android:text="FEJ"
            android:id="@+id/fejGomb"
            />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="206dp"
            android:text="ÍRÁS"
            android:id="@+id/irasGomb"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/kozep">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/dobasokSzama"
            android:text="Dobások: 0"
            android:textSize="30sp"

            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/gyozelemSzama"
            android:text="Győzelem:0 "
            android:textSize="30sp"

            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/veresegSzama"
            android:text="Vereség:0"
            android:textSize="30sp"

            />


    </LinearLayout>



</RelativeLayout>